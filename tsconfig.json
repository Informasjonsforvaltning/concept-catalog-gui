{
  "compilerOptions": {
    "target": "es5",
    "module": "es6",
    "jsx": "react",
    "lib": [
      "esnext",
      "dom"
    ],
    "noImplicitAny": false,
    "outDir": "./build/",
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "downlevelIteration": true,
    "sourceMap": true,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "strictPropertyInitialization": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,

    "types": [
      "node",
      "jest"
    ],
    "typeRoots": [
      "node_modules/@types",
      "src/types/*"
    ]
  },
  "include": ["./images.d.ts", "./src/**/**/*"],
  "exclude": ["node_modules", "./src/setupTest.ts", "./src/**/*.test.tsx"]
}
